{
    "version": 2,
    "framework": "vite",
    "installCommand": "npm install --prefix frontend && composer install --working-dir=backend --no-dev --prefer-dist --optimize-autoloader",
    "buildCommand": "cd frontend && npm run build",
    "outputDirectory": "frontend/dist",
    "functions": {
        "backend/api/index.php": {
            "runtime": "vercel-php@0.7.0",
            "includeFiles": [
                "backend/vendor/**",
                "backend/bootstrap/**",
                "backend/config/**",
                "backend/storage/**",
                "backend/resources/**",
                "backend/routes/**",
                "backend/app/**",
                "backend/database/**",
                "backend/public/**",
                "backend/composer.json",
                "backend/composer.lock",
                "backend/.env"
            ]
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/api/index.php"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/frontend/assets/$1"
        },
        {
            "src": "/logo.png",
            "dest": "/frontend/logo.png"
        },
        {
            "src": "/vite.svg",
            "dest": "/frontend/vite.svg"
        },
        {
            "src": "/manifest.json",
            "dest": "/frontend/manifest.json"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ]
}