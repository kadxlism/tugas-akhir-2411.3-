{
    "version": 2,
    "installCommand": "npm install --prefix frontend && composer install --working-dir=backend --no-dev --prefer-dist --optimize-autoloader",
    "builds": [
        {
            "src": "backend/api/index.php",
            "use": "vercel-php",
            "config": {
                "includeFiles": [
                    "backend/**"
                ]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/api/index.php"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/logo.png",
            "dest": "/logo.png"
        },
        {
            "src": "/vite.svg",
            "dest": "/vite.svg"
        },
        {
            "src": "/manifest.json",
            "dest": "/manifest.json"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}