{
    "version": 2,
    "builds": [
        {
            "src": "backend/api/index.php",
            "use": "vercel-php",
            "config": {
                "excludeFiles": [
                    "frontend/**",
                    "node_modules/**",
                    ".git/**",
                    "**/*.md"
                ]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            ]
        }