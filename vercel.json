{
    "version": 2,
    "builds": [
        {
            "src": "backend/api/index.php",
            "use": "vercel-php",
            "config": {
                "excludeFiles": [
                    "frontend/**",
                    "node_modules/**",
                    ".git/**",
                    "**/*.md"
                ]
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "buildCommand": "cd frontend && npm install && npm run build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/api/index.php"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/frontend/dist/assets/$1"
        },
        {
            "src": "/logo.png",
            "dest": "/frontend/dist/logo.png"
        },
        {
            "src": "/vite.svg",
            "dest": "/frontend/dist/vite.svg"
        },
        {
            "src": "/manifest.json",
            "dest": "/frontend/dist/manifest.json"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/dist/index.html"
        }
    ]
}
