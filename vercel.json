{
    "version": 2,
    "framework": "vite",
    "installCommand": "bash vercel-build.sh",
    "buildCommand": "cd frontend && npm run build",
    "outputDirectory": "frontend/dist",
    "functions": {
        "backend/api/index.php": {
            "runtime": "vercel-php@0.7.0",
            "includeFiles": "backend/**"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/api/index.php"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "/logo.png",
            "dest": "/logo.png"
        },
        {
            "src": "/vite.svg",
            "dest": "/vite.svg"
        },
        {
            "src": "/manifest.json",
            "dest": "/manifest.json"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}